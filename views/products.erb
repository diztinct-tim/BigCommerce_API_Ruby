  <p>Products per page: <%= @products.count %></p>

  <hr>

	<% if @products.count > 0 %>
	    <% @products.each do |product| %>
	      <li>
	        <p class="name"><b>Name:</b> <%= product[:name] %></p>
	        <p class="name"><b>SKU:</b> <%= product[:sku] %></p>
	        <p class="attribute"><b>Condition:</b> <%= product[:condition] %></p>
	        <p class="attribute"><b>Price:</b> <%= product[:price] %></p>
	        <p class="attribute"><b>Stock Level:</b> <%= product[:inventory_level] %></p>

	        <pre><%#= product[:images][:url] %></pre>
	        <pre><%= product[:images][:resource] %></pre>

	        <a href="/product/<%= product[:id] %>/images">Get Product Images</a>

	        <hr>
	      </li>
	    <% end %>
	  <% else %>
	    <li>No Products.</li>
	  <% end %>
